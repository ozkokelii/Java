package kilometreMasrafHesaplama;

import java.util.Scanner;

public class DegerDegistirme {
	public static void main(String[]args) {
		Scanner scanner  = new scanner(System.in);
		
		int birinci_sayi;
		int ikinci_sayi;
		
		System.out.print("Birinci sayýyý giriniz : ");
		birinci_sayi = scanner.nextInt();
		
		System.out.print("Ýkinci sayýyý giriniz : ");
		ikinci_sayi = scanner.nextInt();
		
		System.out.print("Deðiþtirilmeden önce .....");
		System.out.print("Birinci sayý : "+ birinci_sayi + "Ýkinci sayý : "+ ikinci_sayi);
		
		int gecici = birinci_sayi;
		birinci_sayi = ikinci_sayi;
		ikinci_sayi = gecici;
		System.out.print("Deðiþtirildikten sonra .....");
		System.out.print("Birinci sayý : "+ birinci_sayi + "Ýkinci sayý : "+ gecici);
		
		
	}

}
